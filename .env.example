# Database Configuration
POSTGRES_DB=noisenet
POSTGRES_USER=noisenet
POSTGRES_PASSWORD=changeme-strong-password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=changeme-redis-password
REDIS_PORT=6379

# Backend Configuration
SECRET_KEY=changeme-secret-key-at-least-32-characters
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
BACKEND_PORT=8000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MAPBOX_TOKEN=your-mapbox-token-here
FRONTEND_PORT=3001

# Landing Page Configuration
NODE_ENV=development
LANDING_PORT=3000

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme-grafana-password
GRAFANA_PORT=3002

# Security Settings
JWT_SECRET_KEY=changeme-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Audio Processing Configuration
MAX_AUDIO_SNIPPET_SIZE_MB=10
AUDIO_RETENTION_DAYS=7
ENABLE_AUDIO_SNIPPETS=false

# Geospatial Configuration
DEFAULT_MAP_CENTER_LAT=52.520008
DEFAULT_MAP_CENTER_LNG=13.404954
DEFAULT_MAP_ZOOM=10

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@noisenet.org
EMAILS_FROM_NAME=OpenNoiseNet

# Cloud Storage Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=noisenet-audio-snippets
AWS_REGION=eu-central-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
DEVICE_EVENT_RATE_LIMIT_PER_HOUR=1000

# Development Settings
DEBUG=false
RELOAD=false